# ============================================
# SSI FastConnect (REQUIRED)
# ============================================
SSI_CONSUMER_ID=your_consumer_id_here
SSI_CONSUMER_SECRET=your_consumer_secret_here
SSI_BASE_URL=https://fc-data.ssi.com.vn/
SSI_STREAM_URL=https://fc-data.ssi.com.vn/

# ============================================
# Database
# ============================================
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://stock:stock@timescaledb:5432/stock_tracker

# ============================================
# Application
# ============================================
APP_HOST=0.0.0.0
APP_PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# CORS (comma-separated origins)
# ============================================
CORS_ORIGINS=http://localhost,https://yourdomain.com

# ============================================
# Market Data
# ============================================
# Channel R (foreign investor) update interval for speed calc
CHANNEL_R_INTERVAL_MS=1000

# Force specific futures contract (empty = auto-detect)
FUTURES_OVERRIDE=

# ============================================
# WebSocket Configuration
# ============================================
# Per-channel throttle interval (ms)
WS_THROTTLE_INTERVAL_MS=500

# Heartbeat (seconds)
WS_HEARTBEAT_INTERVAL=30.0
WS_HEARTBEAT_TIMEOUT=10.0

# Per-client message queue size
WS_QUEUE_SIZE=50

# ============================================
# WebSocket Security
# ============================================
# Auth token (empty = disabled). Generate: openssl rand -hex 32
WS_AUTH_TOKEN=

# Max concurrent WS connections per IP
WS_MAX_CONNECTIONS_PER_IP=5
